{% extends 'base.html.twig' %}

{% block title %}Gestion des restaurants Wacdo{% endblock %}

{% block metadescription %}
    
{% endblock %}

{% block stylesheets %}
    
{% endblock %}

{% block body %}

<header class="flex">
    <div class="logo_wacdo flex container">
        <div>
            <img src="{{asset('images/logo.png')}}" alt="logo wacdo">
            <a href="{{path('app_logout')}}" title="déconnexion"><button>Se déconnecter</button></a>
        </div>
        <a href="{{path('app_app')}}" title="Retour à l'accueil"><button>Retour</button></a>
    </div>
</header>

<h1>Liste des restaurants</h1>

<div class="form_recherche_restaurant container">
    <form action=" {{path('app_restaurant')}} " method="post" class="flex">
        <input type="search" name="search" id="search">
        <input type="submit" value="rechercher">
    </form>
</div>

<div class="form_filtre_restaurant container">
    <form action="{{path('app_filtre_restaurant')}}" method="post" class="flex">
        <select name="filtre" id="filtre">
            <option value="All">Toutes les villes</option>
            {% for ville in villes %}
                <option value="{{ville.ville}}">{{ville.ville}}</option>
            {% endfor %}
        </select>
        <input type="submit" value="✅">
    </form>
</div>

<div class="container">
    <a href="{{path('restaurant_creation')}}" title="Nouveau Restaurant"><button>Créer un nouveau restaurant</button></a>
</div>

<div class="list_collab container">
    <table>
        <thead>
            <tr>
                <th>Dénomination</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>ville</th>
                <th>En activité</th>
                <th>Fiche restaurant</th>
            </tr>
        </thead>
        <tbody>
            {% include "restaurant/_tBodyListe.html.twig" %}
        </tbody>
    </table>
</div>

{% endblock %}
