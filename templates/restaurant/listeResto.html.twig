{% extends 'base.html.twig' %}

{% block title %}Gestion des restaurants Wacdo{% endblock %}

{% block metadescription %}
    
{% endblock %}

{% block stylesheets %}
    
{% endblock %}

{% block body %}

<div class="form_recherche_restaurant container">
    <form action=" {{path('app_restaurant')}} " method="post" class="flex">
        <input type="search" name="search" id="search">
        <input type="submit" value="rechercher">
    </form>
</div>

<div class="form_filtre_restaurant container">
    <form action="{{path('app_filtre_restaurant')}}" method="post" class="flex">
        <select name="filtre" id="filtre">
            <option value="All">Toutes les villes</option>
            {% for ville in villes %}
                <option value="{{ville.ville}}">{{ville.ville}}</option>
            {% endfor %}
        </select>
        <input type="submit" value="✅">
    </form>
</div>

<div class="list_collab container">
    <table>
        <thead>
            <tr>
                <th>Dénomination</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>ville</th>
                <th>En activité</th>
                <th>Fiche restaurant</th>
            </tr>
        </thead>
        <tbody>
            {% include "restaurant/_tBodyListe.html.twig" %}
        </tbody>
    </table>
</div>

{% endblock %}
